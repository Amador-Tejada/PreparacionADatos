<?xml version="1.0" encoding="utf-8"?>
<hibernate-configuration>
    <session-factory>
        <!--  1. CONEXIÓN A LA BASE DE DATOS  -->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/practica?serverTimezone=UTC</property>
        <property name="connection.username">practica</property>
        <property name="connection.password">practica</property>

        <!--  2. POOL DE CONEXIONES (Opcional)  -->
        <property name="connection.pool_size">1</property>

        <!--  3. DIALECTO SQL  -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hbm2ddl.auto">update</property>
        <!--  5. LOGS Y VISUALIZACIÓN  -->
        <!--  Muestra en la consola las sentencias SQL que Hibernate genera por debajo  -->
        <property name="show_sql">false</property>
        <!--  Formatea el SQL para que sea legible (con saltos de línea)  -->
        <property name="format_sql">false</property>
        <!--  6. REGISTRO DE ENTIDADES (Mapping)  -->
        <!--  Aquí "presentamos" nuestras clases a Hibernate.
                     IMPORTANTE: Debéis poner el nombre completo Paquete.Clase  -->
        <mapping class="org.example.Entidades.CompradorClass"/>
        <mapping class="org.example.Entidades.PedidosClass"/>
    </session-factory>
</hibernate-configuration>